  "main": "dist/vue-progress-status.umd.js",
  "module": "dist/vue-progress-status.es.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/vue-progress-status.es.js",
